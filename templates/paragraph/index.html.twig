{% extends 'base.html.twig' %}
{% block title %}
    Документация
{% endblock %}
{% block content %}
<div class="container_fix">
    <div class="block-title d-flex">
        <div class="col-1"></div>
        <div class="d-flex flex-column justify-content-end">
            <h1 class="block-title__title revealator-slideleft revealator-delay4 revealator-once revealator-below">{{ paragraphs['0'].profession }}</h1>
        </div>
    </div>
    <div class="main d-flex flex-column justify-content-center align-items-center">
        <div class="main__title mt-5 d-flex flex-column align-items-center revealator-slideup revealator-delay2 revealator-once">
            <h2 class="main__position">Информация о должности</h2>
            <p class="main__text mb-3">Всю информацию о данной должности можно узнать здесь.</p>
        </div>
        <div class="main__content w-100">
            <!-- Тут должен быть контент -->
            <ul class="main__ul d-flex flex-column align-items-center">
                {% for paragraph in paragraphs %}
                    <li class="mt-3 col-10 d-flex flex-column align-items-center">
                        <div class="col-7 li__base li__active li__block d-flex justify-content-between align-items-center p-2 revealator-slideleft revealator-once revealator-below">
                            <p class="li__title">{{ loop.index }}. {{ paragraph.name }}</p>
                            <img src="{{ asset('images/round.png') }}" alt="" class="li__item">
                        </div>
                        <div class="li__text li__text_hiden col-9 pt-5 pb-5" style="display: none;">
                            {% for context in paragraph.context %}
                            <div class="squard col-3 d-flex align-items-center">
                                <p class="squard__text text-center">{{ context.number}} {{ context.text}}</p>
                            </div>
                            {% endfor %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
