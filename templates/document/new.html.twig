{% extends 'admin/index.html.twig' %}

{% block content %}
    <div class="d-flex justify-content-center">
        <h3>Добавление файла документации</h3>
        {{ form_start(form) }}
        {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="alert alert-danger">
                {% for error in formErrors %}
                    <div>{{ error.message }}</div>
                {% endfor %}
            </div>
        {% endif %}
        <div class="custom-file d-flex justify-content-center">
            {{ form_widget(form.src_rtf) }}
            {{ form_label(form.src_rtf) }}
        </div>
        <button style="float: right;" type="submit">Загрузить</button>
        {{ form_end(form) }}
    </div>

{% endblock %}